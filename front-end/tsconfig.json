{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"]
  },
  "include": ["./src/**/*", "custom.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
